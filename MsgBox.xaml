        Title="Window1" Height="137.224" Width="207.209">
    <Grid Margin="0,0,2,-2">

        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="Black" Offset="0"/>
                <GradientStop Color="#FF8B8B8B" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Label Content="Wage offer" Foreground="#FFBACB0F" Margin="10,40,119,40"/>
        <Label Content="Wage desire" Foreground="#FFBACB0F" Margin="10,10,107,70"/>
        <TextBox x:Name="price" HorizontalAlignment="Center" Height="19" TextWrapping="Wrap" VerticalAlignment="Center" Width="72" Margin="102,44,23,45"/>
        <Button Content="Offer" HorizontalAlignment="Left" VerticalAlignment="Top" Width="55" Margin="5,80,0,0" Height="18" Click="Button_Click"/>
        <Button Content="Cancel" HorizontalAlignment="Left" VerticalAlignment="Top" Width="55" Margin="132,80,0,0" Height="18"/>
        <Label x:Name="wage" Content="Wage desire" Foreground="#FFBACB0F" Margin="95,10,22,70"/>

    </Grid>
</Window>
